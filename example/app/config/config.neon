parameters:
	container:
		class: SystemContainer

	rowClasses:
		author: Filsedla\Hyperrow\Model\Author
		book: Filsedla\Hyperrow\Model\Book
		tag: Filsedla\Hyperrow\Model\Tag

php:
	date.timezone: Europe/Prague

application:
	errorPresenter: Error
	mapping:
		*: App\*Module\Presenters\*Presenter

session:
	expiration: 14 days

services:
	router: App\RouterFactory::createRouter

	SystemDatabase: Filsedla\Hyperrow\BaseDatabase
	- Filsedla\Hyperrow\Generator(%rowClasses%, %appDir%/model/generated)
	- Filsedla\Hyperrow\HyperRowFactory(%rowClasses%)

	- App\Presenters\HomepagePresenter(@SystemDatabase)
